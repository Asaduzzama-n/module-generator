{
  "info": {
    "name": "User API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"skills\": [\n    {\n      \"title\": \"{{skills_title}}\",\n      \"description\": \"{{skills_description}}\"\n    }\n  ],\n  \"type\": \"{{type}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/user",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "user"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"skills_title\", \"title_\" + Date.now());",
              "pm.variables.set(\"skills_description\", \"description_\" + Date.now());",
              "const type_values = [\"kello\",\"ola\"];",
              "pm.variables.set(\"type\", type_values[Math.floor(Math.random() * type_values.length)]);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/user",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "user"
          ]
        }
      }
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/user/{{user_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "user",
            "{{user_id}}"
          ]
        }
      }
    },
    {
      "name": "Update User",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"skills\": [\n    {\n      \"title\": \"{{skills_title}}\",\n      \"description\": \"{{skills_description}}\"\n    }\n  ],\n  \"type\": \"{{type}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/user/{{user_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "user",
            "{{user_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"skills_title\", \"title_\" + Date.now());",
              "pm.variables.set(\"skills_description\", \"description_\" + Date.now());",
              "const type_values = [\"kello\",\"ola\"];",
              "pm.variables.set(\"type\", type_values[Math.floor(Math.random() * type_values.length)]);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/user/{{user_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "user",
            "{{user_id}}"
          ]
        }
      }
    }
  ]
}