{
  "info": {
    "name": "Order API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer\": \"{{customer}}\",\n  \"items\": [\n    {\n      \"name\": \"{{items_name}}\",\n      \"price\": \"{{items_price}}\",\n      \"quantity\": \"{{items_quantity}}\"\n    }\n  ],\n  \"status\": \"{{status}}\",\n  \"shippingAddress\": {\n    \"street\": \"{{shippingAddress_street}}\",\n    \"city\": \"{{shippingAddress_city}}\",\n    \"state\": \"{{shippingAddress_state}}\",\n    \"zipCode\": \"{{shippingAddress_zipCode}}\"\n  },\n  \"totalAmount\": \"{{totalAmount}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/order",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "order"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"items_name\", \"name_\" + Date.now());",
              "pm.variables.set(\"items_price\", Math.floor(Math.random() * 100));",
              "pm.variables.set(\"items_quantity\", Math.floor(Math.random() * 100));",
              "const status_values = [\"pending\",\"processing\",\"shipped\",\"delivered\"];",
              "pm.variables.set(\"status\", status_values[Math.floor(Math.random() * status_values.length)]);",
              "pm.variables.set(\"shippingAddress_street\", \"street_\" + Date.now());",
              "pm.variables.set(\"shippingAddress_city\", \"city_\" + Date.now());",
              "pm.variables.set(\"shippingAddress_state\", \"state_\" + Date.now());",
              "pm.variables.set(\"shippingAddress_zipCode\", \"zipCode_\" + Date.now());",
              "pm.variables.set(\"totalAmount\", Math.floor(Math.random() * 100));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
